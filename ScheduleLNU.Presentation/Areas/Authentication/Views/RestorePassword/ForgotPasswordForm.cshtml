@model ScheduleLNU.BusinessLogic.DTOs.ForgotPasswordDto;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script type="text/javascript" src="//ajax.googleapis.com/ajax/libs/jquery/2.0.0/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.css" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/1.1.3/sweetalert.min.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/authentication/authentication.css" />
    <script type="text/javascript">
        $(document).ready(function () {
            $("#btnAlertMessage").click(function () {
                swal({
                    title: "Please check your email!",
                    text: "Further instructions has been sent as a letter on your email.",
                    type: "success",
                    showCancelButtonClass: "btn-primary",
                    confirmButtonText: "OK"
                }).then(function () {
                    window.location = "authentication/forgot-password";
                });
            });
        });
    </script>
</head>
<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 infinity-form-container">
                <div class="col-lg-9 col-md-12 col-sm-8 infinity-form">
                    <div class="text-left mb-4 px-3">
                        <h4>Help in changing the password</h4>
                    </div>
                    <div class="px-3">
                        <div class="input-container">
                            <form method="post">
                                <div class="mb-3">
                                    Please enter your email address in the form below and we'll send you password reset instructions.
                                </div>
                                <div>@Html.ValidationSummary(false)</div>
                                <div class="plain-line">
                                    <div class="float-left">
                                        EMAIL ADDRESS
                                    </div>
                                </div>
                                <br>
                                <div class="form-input">
                                    @Html.TextBoxFor(m => m.Email, new { placeholder = "username@domain.com" })
                                </div>
                                <div id="email-info" class="mb-3">
                                    The email you used to register for LNU Schedule
                                </div>
                                <div class="mb-3">
                                    <button asp-action="ForgotPassword"
                                            asp-area="authentication"
                                            asp-controller="RestorePassword"
                                            type="submit"
                                            id="btnAlertMessage"
                                            class="btn btn-block">Restore password
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
