@using ScheduleLNU.BusinessLogic.Extensions
@model ScheduleLNU.BusinessLogic.DTOs.EventStyleDto
<!DOCTYPE html>
<form method="post" a></form>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<html lang="en">
<head>
    <title>Edit Style</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <meta charset="utf-8" />
    <!-- Bootstrap Font Icon CSS -->
    <script src="lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/schedules.js"></script>
    <link rel="stylesheet" href=~/css/base.css />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link type="text/css" rel="stylesheet" href="~/css/base.css" />
    <link type="text/css" rel="stylesheet" href="~/css/event_styles.css" />
</head>
<style>
    body
    {
        background-color: @Context.BackColor();
    }

    label
    {
        color: @Context.ForeColor();
        font-family: @Context.FontFamily();
        font-size: @Context.FontSize();
    }
</style>

<body>
    <div id="placeholderElement" style="position:absolute"></div>
    <div class="my-container">
        @await Html.PartialAsync("~/Views/Shared/_Header.cshtml")
        <h1 id="main-label">Edit Style</h1>
        <form method="post" class="style-form">
            <label for="title">Title</label>
            <input type="text" name="Title" value="@Model.Title"><br />
            <label for="foreColor">ForeColor</label>
            <input type="color" name="ForeColor" value="@Model.ForeColor"><br />
            <label for="backColor">BackColor</label>
            <input type="color" name="BackColor" value="@Model.BackColor"><br />
            <button asp-action="EditStyle"
                    asp-area="settings"
                    asp-controller="EventStyleSettings"
                    asp-route-id="@Model.Id"
                    type="submit"
                    class="styles-confirm-button">
                <span>
                    <span>
                        Save changes
                    </span>
                </span>
            </button>
        </form>
    </div>
</body>
</html>