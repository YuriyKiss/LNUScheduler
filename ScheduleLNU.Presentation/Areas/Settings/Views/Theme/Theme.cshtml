@using ScheduleLNU.BusinessLogic.Extensions
@model ScheduleLNU.BusinessLogic.DTOs.ThemeDto;

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@addTagHelper *, AuthoringTagHelpers

@{
    ViewData["Title"] = $"Theme {Model.Title}";
}

<html>
<head>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <meta charset="utf-8" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.5.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    <link type="text/css" rel="stylesheet" href="~/css/base.css" />
    <link type="text/css" rel="stylesheet" href="~/css/schedules/view.css" />
</head>

<style>
    body
    {
        background-color: @Context.BackColor();
    }

    label
    {
        color: @Context.ForeColor();
        font-family: @Context.FontFamily();
        font-size: @Context.FontSize();
    }
</style>

<body>
    <div class="my-container">
        @await Html.PartialAsync("~/Views/Shared/_Header.cshtml")
        <h1 id="main-label">@Model.Title</h1>
        <div class="d-flex w-100 justify-content-center border-info">
            <form method="post">
                <input name="IsSelected" value="@Model.IsSelected.ToString()" type="hidden">
                <input name="Id" value="@Model.Id" type="hidden"/>
                <label for="title">Title</label>
                <input type="text" name="Title" value="@Model.Title"><br /> 
                <label for="foreColor">ForeColor</label>
                <input type="color" name="ForeColor" value="@Model.ForeColor"><br />
                <label for="backColor">BackColor</label>
                <input type="color" name="BackColor" value="@Model.BackColor"><br />
                <label for="font">Font</label>
                <input type="text" name="Font" value="@Model.Font"><br />
                <label for="font">Font size</label>
                <input type="text" name="FontSize" value="@Model.FontSize"><br />
                <button class="btn btn-info" 
                        asp-action="Edit" 
                        asp-area="settings" 
                        asp-controller="Theme"  
                        type="submit">Save</button>
            </form>
        </div>
    </div>
</body>
</html>