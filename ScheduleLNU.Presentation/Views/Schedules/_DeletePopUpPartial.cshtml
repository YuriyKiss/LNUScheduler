@model ScheduleLNU.BusinessLogic.DTOs.ScheduleDto
<!-- Modal -->
<div class="modal fade" id="deleteModalCenter" tabindex="-1" role="dialog" aria-labelledby="deleteModalCenter" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header bg-danger">
                <h5 class="modal-title text-light" id="deleteModalLongTitle">Delete Schedule</h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete schedule - <b>@Model.Title</b>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" data-save="modal" id="deleteSchedule"
                        data-url="@Url.Action("Delete", "Schedules", new { scheduleId = Model.Id })">
                    Delete
                </button>
            </div>
        </div>
    </div>
</div>